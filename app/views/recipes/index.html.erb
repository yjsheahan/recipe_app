<div class="index-container">

  <h1>Recipes</h1>

  <div class="recipes-container">
    <% @recipe.each_slice(3) do |recipes| %>
      <div class="row">
        <% recipes.each do |recipe| %>
          <div class="col">
            <div class="recipe">
              <div class="image-wrapper">
                <%= link_to recipe do %>
                  <%= cl_image_tag recipe.image.key, width: 280, height: 280, crop: :fill %>
                  <h2><%= link_to recipe.title, recipe_path(recipe) %></h2>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>

</div>
