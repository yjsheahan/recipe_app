<%= render 'shared/navbar' %>
<div class="index-container">
  <div class="hero">
    <div class="halo"></div>
    <div class="hero-content">
      <h1>
        Vegan
        <br>
        Bakes.
      </h1>
      <!-- add buttons here to remove nav -->
    </div>
    <%= cl_image_tag("https://res.cloudinary.com/dpzjvi2w1/image/upload/v1598380113/cake-1_zx4xim.png") %>
    <p>Tried and tested recipes!</p>
  </div>
</div>



<div class="recipes-index-container">

    <div class="recipes-container">
      <% @recipe.each do |recipe| %>

          <div class="recipe">
            <div class="box">

            <%= link_to recipe do %>
              <%= cl_image_tag recipe.image.key, width: 280, height: 280, crop: :fill %>
              <div class="recipe-info">
                <h2><%= recipe.title %></h2>
              </div>
            <% end %>
          </div>

          </div>

      <% end %>
    </div>

    <div class="bottom-row">
      <%= link_to "Edit/Delete Account", edit_user_registration_path %>
    </div>
  </div>
</div>

