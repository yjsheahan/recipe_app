<div class="show-container">

  <div class="row-1">
    <% if @recipe.image.attached? %>
      <%= cl_image_tag @recipe.image.key %>
    <% end %>
    <div class="show-description l-padding">
      <h1><%= @recipe.title %></h1>
      <p><%= @recipe.description %></p>
      <p><%= @recipe.prep_time %></p>
      <p><%= @recipe.cooking_time %></p>
      <p><%= @recipe.difficulty %></p>
      <p><%= @recipe.servings %></p>
      <p>
        Submitted by
        - <%= @recipe.user.name %>
      </p>
      <div class="show-buttons">
        <%= link_to "Edit", edit_recipe_path, class: "btn btn-default" %>
        <%= link_to "Back", root_path, class: "btn btn-default" %>
        <%= link_to "Delete", recipe_path, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-default" %>
      </div>
    </div>
  </div>

  <div class="row-2">
    <div class="ingredients-container">
      <% if @recipe.ingredients.any? %>
        <h2>Ingredients</h2>
        <hr>
        <% @recipe.ingredients.each do |ingredient| %>
          <p><%= ingredient.name %></p>
          <hr>
        <% end %>
        <%= link_to "Add Ingredients", new_recipe_ingredient_path(@recipe) %>
      <% else %>
      <%= link_to "Don't forget to add the ingredients!", new_recipe_ingredient_path(@recipe) %>
      <% end %>
    </div>

    <div class="directions-container l-padding">
      <% if @recipe.directions.any? %>
        <h2>Directions</h2>
        <% @recipe.directions.each_with_index do |direction, index| %>
          <div class="direction-single">
            <h6><%= index + 1 %></h6><p><%= direction.content %></p>
          </div>
        <% end %>

        <%= link_to "Add Directions", new_recipe_direction_path(@recipe) %>
      <% else %>
      <%= link_to "How do you make this delicious treat?", new_recipe_direction_path(@recipe) %>
      <% end %>
    </div>
  </div>

  <hr>
</div>

<hr>
