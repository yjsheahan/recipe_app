<div class="signup-container">
  <%= link_to root_path do %>
    <h1>Vegan
      <br>
      <span>Bakes</span>
    </h1>
  <% end %>

  <div class="signup-box">
<!--     <h2>Log in</h2>
 -->
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email", class: "form-control" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password", class: "form-control" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <hr>

      <div class="form-actions">
        <%= f.button :submit, "Log in", input_html: { class: "btn btn-default" } %>
        <%= link_to "Create an account", new_user_registration_path %>
      </div>

    <% end %>
  </div>

</div>
